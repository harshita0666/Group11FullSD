@page "/preference-survey"
@inject NavigationManager NavigationManager

<PageTitle>Pet Preferences Survey</PageTitle>


<div class="survey-container">
    <h1>Tell Us About Your Ideal Pet!</h1>
    <p>Fill out this form to help us match you with your perfect companion.</p>

    <EditForm Model="@userPreferences" OnValidSubmit="SubmitPreferences">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <!-- Pet Type -->
        <div class="form-group">
            <label for="petType">Preferred Pet Type:</label>
            <select id="petType" @bind="userPreferences.PetType" class="form-control">
                <option value="">-- Select --</option>
                <option value="Dog">Dog</option>
                <option value="Cat">Cat</option>
                <option value="Bird">Bird</option>
                <option value="Small Animal">Small Animal</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <!-- Size -->
        <div class="form-group">
            <label for="size">Preferred Size:</label>
            <select id="size" @bind="userPreferences.Size" class="form-control">
                <option value="">-- Select --</option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
            </select>
        </div>

        <!-- Age -->
        <div class="form-group">
            <label for="age">Preferred Age:</label>
            <select id="age" @bind="userPreferences.Age" class="form-control">
                <option value="">-- Select --</option>
                <option value="Puppy/Kitten">Puppy/Kitten</option>
                <option value="Young">Young</option>
                <option value="Adult">Adult</option>
                <option value="Senior">Senior</option>
            </select>
        </div>

        <!-- Activity Level -->
        <div class="form-group">
            <label for="activityLevel">Activity Level:</label>
            <select id="activityLevel" @bind="userPreferences.ActivityLevel" class="form-control">
                <option value="">-- Select --</option>
                <option value="Low">Low</option>
                <option value="Moderate">Moderate</option>
                <option value="High">High</option>
            </select>
        </div>

        <!-- Additional Notes -->
        <div class="form-group">
            <label for="notes">Additional Notes:</label>
            <textarea id="notes" @bind="userPreferences.Notes" class="form-control" placeholder="Any specific requirements or preferences"></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn-primary">Submit Preferences</button>
    </EditForm>
</div>

@code {
    private UserPreferences userPreferences = new UserPreferences();

    private void SubmitPreferences()
    {
        // Handle submission logic (e.g., save data to a database)
        Console.WriteLine($"Preferences Submitted: {userPreferences}");
        NavigationManager.NavigateTo("/adopt"); // Redirect to adopt page
    }

    public class UserPreferences
    {
        public string PetType { get; set; }
        public string Size { get; set; }
        public string Age { get; set; }
        public string ActivityLevel { get; set; }
        public string Notes { get; set; }
    }
}


